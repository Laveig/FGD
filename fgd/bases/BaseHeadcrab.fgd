@BaseClass base(BaseNPC)
= BaseHeadcrab
	[
	startburrowed(boolean) : "Start burrowed" : 0 : "Should this headcrab start buried?"

	spawnflags(flags) : "spawnflags" : "Flags that can be set on spawn (i.e. in Hammer Editor)" =
		[
		65536: "Start hidden" : 0
		131072: "Start hanging from ceiling" : 0
		]


	// Inputs
	input Unburrow(void) : "Unburrow"
	input StartHangingFromCeiling(void) : "Start hanging from ceiling."
	input DropFromCeiling(void) : "Drop if hanging from ceiling."
	]
